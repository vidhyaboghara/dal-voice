<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cat_general"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_width="160dp"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:id="@+id/cat_general_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/general"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/cat_general_image"
                    android:text="@string/catGeneral"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_below="@+id/cat_general"
            android:id="@+id/cat_technology"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_width="160dp"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cat_tech_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/tech"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/cat_tech_image"
                    android:text="@string/catTechnology"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_below="@+id/cat_technology"
            android:id="@+id/cat_university"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_width="160dp"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:id="@+id/cat_uni_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/uni"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/cat_uni_image"
                    android:text="@string/catUniversity"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_below="@+id/cat_university"
            android:id="@+id/cat_travel"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:id="@+id/cat_travel_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/travel"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/cat_travel_image"
                    android:text="@string/catTravel"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_toEndOf="@+id/cat_general"
            android:id="@+id/cat_entertainment"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_width="160dp"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:id="@+id/cat_entertainment_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/entertainment"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/cat_entertainment_image"
                    android:text="@string/catEntmnt"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_toEndOf="@+id/cat_technology"
            android:layout_below="@+id/cat_entertainment"
            android:id="@+id/cat_sports"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_width="160dp"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:id="@+id/cat_sports_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/sports"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/cat_sports_image"
                    android:text="@string/catSports"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_toEndOf="@+id/cat_university"
            android:layout_below="@+id/cat_sports"
            android:id="@+id/cat_business"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_width="160dp"
            android:layout_height="160dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:id="@+id/cat_business_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/business"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/cat_business_image"
                    android:text="@string/catBusiness"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_toEndOf="@+id/cat_travel"
            android:layout_below="@+id/cat_business"
            android:id="@+id/cat_food"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginBottom="25dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView

                    android:id="@+id/cat_food_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/food"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_width="130dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/cat_food_image"
                    android:text="@string/catFood"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</ScrollView>


